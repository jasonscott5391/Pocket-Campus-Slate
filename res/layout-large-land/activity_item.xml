<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="#000">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000"
        android:orientation="vertical" >

        <!-- ImageView for Item's image -->

        <ImageView
            android:id="@+id/item_image"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:background="#000" />

        <!-- TextView for Item's Publication Date -->

        <TextView
            android:id="@+id/item_pubdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/item_category"
            android:layout_alignBottom="@+id/item_category"
            android:layout_alignParentRight="true"
            android:textColor="#C0C0C0"
            android:textIsSelectable="true"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- TextView for Item's author -->

        <TextView
            android:id="@+id/item_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/item_category"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="25dp"
            android:text="@string/test_author"
            android:textColor="#C0C0C0"
            android:textIsSelectable="true"
            android:textStyle="italic" />

        <!-- TextView for Item's Category -->

        <TextView
            android:id="@+id/item_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/item_author"
            android:layout_below="@+id/item_image"
            android:textColor="#C0C0C0"
            android:textIsSelectable="true"
            android:textSize="14sp"
            android:textStyle="bold" />
        <!-- TextView for Item's Content -->

        <TextView
            android:id="@+id/item_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/item_author"
            android:layout_marginTop="1dp"
            android:autoLink="all"
            android:background="#000"
            android:textColor="#fff"
            android:textIsSelectable="true" />

        <!-- TextView for Item's Link -->

        <TextView
            android:id="@+id/item_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/item_content"
            android:autoLink="all" />

        <!-- TextView for Item's Title -->

        <TextView
            android:id="@+id/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/item_image"
            android:layout_alignLeft="@+id/item_category"
            android:layout_marginBottom="33dp"
            android:textColor="#fff"
            android:textIsSelectable="true"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

</ScrollView>